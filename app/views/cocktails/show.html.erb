<h1 class="mt-5"><%= @cocktail.name%></h1>
<br>
<h2>Ingredients</h2>
<br>
<ul>
  <% @cocktail.doses.each do |dose|%>
  <li><%= dose.description %> <%= Ingredient.find(dose.ingredient_id).name %>   <%= link_to "Delete", dose_path(dose), data: { confirm: 'Are you sure?' }, method: :delete %></li>
  <% end %>
</ul>

<%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to list", cocktails_path %>

