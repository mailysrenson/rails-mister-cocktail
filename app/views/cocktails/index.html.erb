<h1 class="my-5">Cocktail List</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail|%>
    <div class="col-6 col-md-4 col-lg-3 mx-0">
      <%= link_to(cocktail) do %>
        <div class="card-category my-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(cocktail.photo.key) %>)">
          <%= cocktail.name %>
        </div>
      <%end%>
    </div>
    <% end %>
  </div>
</div>

<div class="my-5">
  <%= link_to "Add a new cocktail", "/cocktails/new" %>
</div>
